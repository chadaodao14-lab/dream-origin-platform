# Laragon 环境配置文件
# 梦之源创业投资平台

# 数据库配置 (使用 Laragon 内置 MySQL)
DATABASE_URL=mysql://root:@localhost:3306/dreamsource_db
DATABASE_HOST=localhost
DATABASE_PORT=3306
DATABASE_USER=root
DATABASE_PASSWORD=
DATABASE_NAME=dreamsource_db

# Redis配置 (使用 Laragon 内置 Redis)
REDIS_URL=redis://localhost:6379

# JWT配置
JWT_SECRET=laragon-dreamsource-jwt-secret-key-change-in-production
JWT_EXPIRES_IN=24h

# 应用配置
NODE_ENV=development
PORT=8001
CLIENT_PORT=3002

# 日志配置
LOG_LEVEL=INFO
ENABLE_REMOTE_LOGGING=false

# 安全配置
SESSION_SECRET=laragon-session-secret-change-in-production
COOKIE_SECURE=false

# 系统配置
MIN_DEPOSIT_AMOUNT=300
COMMISSION_LEVELS=9

# Laragon 特定配置
LARAGON_ROOT=D:/laragon
LARAGON_WWW=D:/laragon/www
LARAGON_APACHE_PORT=80
LARAGON_NGINX_PORT=8080
LARAGON_MYSQL_PORT=3306
LARAGON_REDIS_PORT=6379

# 域名配置
DOMAIN_NAME=dreamsource.local
DOMAIN_ALIAS=www.dreamsource.local

# 部署路径
DEPLOY_PATH=D:/laragon/www/dreamsource
CLIENT_PATH=D:/laragon/www/dreamsource/client
SERVER_PATH=D:/laragon/www/dreamsource/server
LOGS_PATH=D:/laragon/www/dreamsource/logs